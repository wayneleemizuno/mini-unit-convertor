{
    "manifest_version": 3,
    "name": "Mini Unit Converter",
    "version": "1.0",
    "description": "A simple browser extension for converting units like length, weight, temperature, volume, time, speed, area, energy, and data.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": [],
    "web_accessible_resources": [
        {
            "resources": ["*.html", "*.css", "*.js", "icons/icon16.png", "icons/icon48.png", "icons/icon128.png"],
            "matches": ["<all_urls>"]
        }
    ]
}
